#include <iostream>
using namespace std;

// Main function
   int main()
{
   
   
   cout << "Here are some approximations of PI:" << endl;

   // Archimedes 225 BC
   cout << "22 / 7 = " << 22. / 7 << endl;
   float number;
   number = 22. / 7;

   // Zu Chongzhi 480 AD
   cout << "355 / 113 = " << 355 / 113 << endl;

   // Indiana law 1897 AD
   cout << "16 / 5 = " << 16 / 5 << endl;

   return 0;
}

